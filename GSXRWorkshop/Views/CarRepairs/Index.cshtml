}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form action="http://localhost:59045/Repairs">
    <input type="submit" , value="Motorcycle Appointments"></input>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Car.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
